<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All cocktails
    </h1>

    <a href="/cocktails/new" class="btn btn-block btn-outline-secondary">
      Add a new cocktail
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "cocktail_templates/cocktails_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Ingredients
        </th>

        <th>
          Likes count
        </th>

        <th>
          Comment count
        </th>

        <th>
          Venue
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @cocktails.each do |cocktail| %>
      <tr>
        <td>
          <%= cocktail.id %>
        </td>

        <td>
          <%= cocktail.name %>
        </td>

        <td>
          <%= cocktail.ingredients %>
        </td>

        <td>
          <%= cocktail.likes_count %>
        </td>

        <td>
          <%= cocktail.comment_count %>
        </td>

        <td>
          <% if cocktail.venue.present? %>
            <a href="/venues/<%= cocktail.venue.id %>">
              <%= cocktail.venue.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(cocktail.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(cocktail.updated_at) %> ago
        </td>

        <td>
          <a href="/cocktails/<%= cocktail.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @cocktails, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
