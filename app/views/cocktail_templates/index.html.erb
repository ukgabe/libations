<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All cocktails
    </h1>

    <a href="/cocktails/new" class="btn btn-block btn-outline-secondary">
      Add a new cocktail
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Ingredients
        </th>

        <th>
          Likes count
        </th>

        <th>
          Comment count
        </th>

        <th>
          Venue
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @cocktails.each do |cocktail| %>
      <tr>
        <!-- Display cocktail.id start -->
        <td>
          <%= cocktail.id %>
        </td>
        <!-- Display cocktail.id end -->

        <!-- Display cocktail.name start -->
        <td>
          <%= cocktail.name %>
        </td>
        <!-- Display cocktail.name end -->

        <!-- Display cocktail.ingredients start -->
        <td>
          <%= cocktail.ingredients %>
        </td>
        <!-- Display cocktail.ingredients end -->

        <!-- Display cocktail.likes_count start -->
        <td>
          <%= cocktail.likes_count %>
        </td>
        <!-- Display cocktail.likes_count end -->

        <!-- Display cocktail.comment_count start -->
        <td>
          <%= cocktail.comment_count %>
        </td>
        <!-- Display cocktail.comment_count end -->

        <!-- Display cocktail.venue_id start -->
        <td>
          <%= cocktail.venue.name %>
        </td>
        <!-- Display cocktail.venue_id end -->

        <!-- Display cocktail.created_at start -->
        <td>
          <%= time_ago_in_words(cocktail.created_at) %> ago
        </td>
        <!-- Display cocktail.created_at end -->

        <!-- Display cocktail.updated_at start -->
        <td>
          <%= time_ago_in_words(cocktail.updated_at) %> ago
        </td>
        <!-- Display cocktail.updated_at end -->

        <td>
          <a href="/cocktails/<%= cocktail.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @cocktails, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
