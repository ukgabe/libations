<%= search_form_for @q, :class => collapse_search_form, :id => "cocktails_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :comment_count, "Comment count" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :comment_count_gteq, :class => "form-control", :placeholder => "Comment count greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :comment_count_lteq, :class => "form-control", :placeholder => "Comment count less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :likes_count, "Likes count" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :likes_count_gteq, :class => "form-control", :placeholder => "Likes count greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :likes_count_lteq, :class => "form-control", :placeholder => "Likes count less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :ingredients_cont, "Ingredients contains" %>
    <%= f.text_field :ingredients_cont, :class => "form-control", :placeholder => "Ingredients contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :venue_name_cont, "Venue name contains" %>
    <%= f.text_field :venue_name_cont, :class => "form-control", :placeholder => "Venue name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "CocktailPhoto Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='cocktail_photosgteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :cocktail_photos_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "CocktailPhoto Created at greater than or equal to", :data => {:target => '#cocktail_photosgteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#cocktail_photosgteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='cocktail_photoslteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :cocktail_photos_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "CocktailPhoto Created at less than or equal to", :data => {:target => '#cocktail_photoslteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#cocktail_photoslteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#cocktail_photosgteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#cocktail_photoslteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#cocktail_photosgteqcreated_atPicker').on("dp.change", function (e) {
              $('#cocktail_photoslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#cocktail_photoslteqcreated_atPicker').on("dp.change", function (e) {
              $('#cocktail_photosgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/cocktails" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#cocktails_filters">
  Show filters
</a>
