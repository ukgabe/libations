<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Cocktail Photos

    <a data-toggle="collapse" href="#cocktail_cocktail_photos_new_form">
      Add cocktail photo
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @cocktail.cocktail_photos.each do |cocktail_photo| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/cocktail_photos/<%= cocktail_photo.id %>">
          <%= cocktail_photo.created_at %>
        </a>

        <a href="/delete_cocktail_photo_from_cocktail/<%= cocktail_photo.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="cocktail_cocktail_photos_new_form">
        <%= render partial: "cocktail_templates/cocktail_cocktail_photos_new_form" %>
      </div>
    </div>

  </ul>
</div>
