<h1>
  Edit follow request #<%= @follow_request.id %>
</h1>

<hr>

<!-- Form follow_request start -->
<form action="/update_follow_request/<%= @follow_request.id %>" method="post">
<!-- Form follow_request end -->

  <!-- Label and input for recipient_id start -->
  <div class="form-group">
    <label for="recipient_id">
      Recipient
    </label>

    <!-- Input for recipient_id start -->
    <%= select_tag(:recipient_id, options_from_collection_for_select(User.all, :id, :created_at, @follow_request.recipient_id), :class => "form-control") %>
    <!-- Input for recipient_id end -->
  </div>
  <!-- Label and input for recipient_id end -->

  <!-- Label and input for sender_id start -->
  <!-- Label and input for sender_id end -->

  <!-- Label and input for status start -->
  <div class="form-group">
    <label for="status">
      Status
    </label>

    <!-- Input for status start -->
    <input type="text" id="status" name="status" class="form-control" value="<%= @follow_request.status %>">
    <!-- Input for status end -->
  </div>
  <!-- Label and input for status end -->

  <button class="btn btn-block btn-outline-secondary">
    Update follow request
  </button>
</form>

<hr>

<a href="/follow_requests">
  Go back
</a>
