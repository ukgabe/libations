              $('#recipientgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/follow_requests" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

