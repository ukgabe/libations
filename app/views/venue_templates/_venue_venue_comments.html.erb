<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Venue Comments

    <a data-toggle="collapse" href="#venue_venue_comments_new_form">
      Add venue comment
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @venue.venue_comments.each do |venue_comment| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/venue_comments/<%= venue_comment.id %>">
          <%= venue_comment.author_id %>
        </a>

        <a href="/delete_venue_comment_from_venue/<%= venue_comment.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="venue_venue_comments_new_form">
        <%= render partial: "venue_templates/venue_venue_comments_new_form" %>
      </div>
    </div>

  </ul>
</div>
