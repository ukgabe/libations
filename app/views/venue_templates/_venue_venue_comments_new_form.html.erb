<form action="/create_venue_comment_from_venue" method="post">

  <div class="form-group">
    <label for="author_id">
      Author
    </label>

    <%= select_tag(:author_id, options_from_collection_for_select(User.all, :id, :created_at, @venue_comment.author_id), :class => "form-control") %>
  </div>

  <input type="hidden" name="venue_id" value="<%= @venue.id %>">

  <div class="form-group">
    <label for="body">
      Body
    </label>

    <input type="text" id="body" name="body" class="form-control" value="<%= @venue_comment.body %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create venue comment
  </button>
</form>
