<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Cocktails

    <a data-toggle="collapse" href="#venue_cocktails_new_form">
      Add cocktail
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @venue.cocktails.each do |cocktail| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/cocktails/<%= cocktail.id %>">
          <%= cocktail.name %>
        </a>

        <a href="/delete_cocktail_from_venue/<%= cocktail.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="venue_cocktails_new_form">
        <%= render partial: "venue_templates/venue_cocktails_new_form" %>
      </div>
    </div>

  </ul>
</div>
