<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Venue comment #<%= @venue_comment.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/venue_comments" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/venue_comments/<%= @venue_comment.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit venue comment
        </a>
      </div>

      <div class="col">
        <a href="/delete_venue_comment/<%= @venue_comment.id %>" class="btn btn-block btn-outline-secondary">
          Delete venue comment
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Author
      </dt>
      <dd>
        <% if @venue_comment.author.present? %>
          <a href="/users/<%= @venue_comment.author_id %>">
            <%= @venue_comment.author.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>
        Venue
      </dt>
      <dd>
        <% if @venue_comment.venue.present? %>
          <a href="/venues/<%= @venue_comment.venue_id %>">
            <%= @venue_comment.venue.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Body
      </dt>
      <dd>
        <%= @venue_comment.body %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@venue_comment.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@venue_comment.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

