<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All venue comments
    </h1>

    <a href="/venue_comments/new" class="btn btn-block btn-outline-secondary">
      Add a new venue comment
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Author
        </th>

        <th>
          Venue
        </th>

        <th>
          Body
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @venue_comments.each do |venue_comment| %>
      <tr>
        <!-- Display venue_comment.id start -->
        <td>
          <%= venue_comment.id %>
        </td>
        <!-- Display venue_comment.id end -->

        <!-- Display venue_comment.author_id start -->
        <td>
          <%= venue_comment.author.created_at %>
        </td>
        <!-- Display venue_comment.author_id end -->

        <!-- Display venue_comment.venue_id start -->
        <td>
          <%= venue_comment.venue.name %>
        </td>
        <!-- Display venue_comment.venue_id end -->

        <!-- Display venue_comment.body start -->
        <td>
          <%= venue_comment.body %>
        </td>
        <!-- Display venue_comment.body end -->

        <!-- Display venue_comment.created_at start -->
        <td>
          <%= time_ago_in_words(venue_comment.created_at) %> ago
        </td>
        <!-- Display venue_comment.created_at end -->

        <!-- Display venue_comment.updated_at start -->
        <td>
          <%= time_ago_in_words(venue_comment.updated_at) %> ago
        </td>
        <!-- Display venue_comment.updated_at end -->

        <td>
          <a href="/venue_comments/<%= venue_comment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
