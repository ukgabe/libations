<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All venue comments
    </h1>

    <a href="/venue_comments/new" class="btn btn-block btn-outline-secondary">
      Add a new venue comment
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "venue_comment_templates/venue_comments_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Author
        </th>

        <th>
          Venue
        </th>

        <th>
          Body
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @venue_comments.each do |venue_comment| %>
      <tr>
        <td>
          <%= venue_comment.id %>
        </td>

        <td>
          <% if venue_comment.author.present? %>
            <a href="/users/<%= venue_comment.author.id %>">
              <%= venue_comment.author.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <% if venue_comment.venue.present? %>
            <a href="/venues/<%= venue_comment.venue.id %>">
              <%= venue_comment.venue.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= venue_comment.body %>
        </td>

        <td>
          <%= time_ago_in_words(venue_comment.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(venue_comment.updated_at) %> ago
        </td>

        <td>
          <a href="/venue_comments/<%= venue_comment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @venue_comments, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
