<!-- Validation failure messages -->
<% if @photo_like.present? %>
  <% if @photo_like.errors.any? %>
    <% @photo_like.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new photo like
</h1>


<hr>

<!-- Form photo_like start -->
<form action="/create_photo_like" method="post">
<!-- Form photo_like end -->

  <!-- Label and input for photo_id start -->
  <div class="form-group">
    <label for="photo_id">
      Photo
    </label>

    <!-- Input for photo_id start -->
    <%= select_tag(:photo_id, options_from_collection_for_select(CocktailPhoto.all, :id, :created_at, @photo_like.photo_id), :class => "form-control") %>
    <!-- Input for photo_id end -->
  </div>
  <!-- Label and input for photo_id end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :created_at, @photo_like.user_id), :class => "form-control") %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create photo like
  </button>
</form>

<hr>

<a href="/photo_likes">
  Go back
</a>
