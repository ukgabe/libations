<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All photo likes
    </h1>

    <a href="/photo_likes/new" class="btn btn-block btn-outline-secondary">
      Add a new photo like
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "photo_like_templates/photo_likes_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Photo
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @photo_likes.each do |photo_like| %>
      <tr>
        <td>
          <%= photo_like.id %>
        </td>

        <td>
          <% if photo_like.photo.present? %>
            <a href="/cocktail_photos/<%= photo_like.photo.id %>">
              <%= photo_like.photo.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <% if photo_like.user.present? %>
            <a href="/users/<%= photo_like.user.id %>">
              <%= photo_like.user.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(photo_like.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(photo_like.updated_at) %> ago
        </td>

        <td>
          <a href="/photo_likes/<%= photo_like.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @photo_likes, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
