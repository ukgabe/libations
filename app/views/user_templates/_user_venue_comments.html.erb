<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Venue Comments

    <a data-toggle="collapse" href="#user_venue_comments_new_form">
      Add venue comment
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.venue_comments.each do |venue_comment| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/venue_comments/<%= venue_comment.id %>">
          <%= venue_comment.author_id %>
        </a>
        <!-- Show link end -->

      </li>
    <% end %>

  </ul>
</div>
