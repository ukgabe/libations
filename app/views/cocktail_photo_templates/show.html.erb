<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Cocktail photo #<%= @cocktail_photo.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/cocktail_photos" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/cocktail_photos/<%= @cocktail_photo.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit cocktail photo
        </a>
      </div>

      <div class="col">
        <a href="/delete_cocktail_photo/<%= @cocktail_photo.id %>" class="btn btn-block btn-outline-secondary">
          Delete cocktail photo
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Image
      </dt>
      <dd>
        <img src="<%= @cocktail_photo.image %>" class="img-fluid">
      </dd>

      <dt>
        Caption
      </dt>
      <dd>
        <%= @cocktail_photo.caption %>
      </dd>

      <dt>
        Owner
      </dt>
      <dd>
        <% if @cocktail_photo.owner.present? %>
          <a href="/users/<%= @cocktail_photo.owner_id %>">
            <%= @cocktail_photo.owner.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>
        Cocktail
      </dt>
      <dd>
        <% if @cocktail_photo.cocktail.present? %>
          <a href="/cocktails/<%= @cocktail_photo.cocktail_id %>">
            <%= @cocktail_photo.cocktail.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Comment count
      </dt>
      <dd>
        <%= @cocktail_photo.comment_count %>
      </dd>

      <dt>
        Likes count
      </dt>
      <dd>
        <%= @cocktail_photo.likes_count %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@cocktail_photo.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@cocktail_photo.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "cocktail_photo_templates/cocktail_photo_photo_comments" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "cocktail_photo_templates/cocktail_photo_photo_likes" %>
  </div>
</div>
