<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Photo comment #<%= @photo_comment.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/photo_comments" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link photo_comment start -->
      <div class="col">
        <a href="/photo_comments/<%= @photo_comment.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit photo comment
        </a>
      </div>
      <!-- Edit link photo_comment end -->

      <!-- Delete link photo_comment start -->
      <div class="col">
        <a href="/delete_photo_comment/<%= @photo_comment.id %>" class="btn btn-block btn-outline-secondary">
          Delete photo comment
        </a>
      </div>
      <!-- Delete link photo_comment end -->
    </div>

    <dl>
      <dt>
        Author
      </dt>
      <!-- Display author_id start -->
      <dd>
        <% if @photo_comment.author.present? %>
          <a href="/users/<%= @photo_comment.author_id %>">
            <%= @photo_comment.author.created_at %>
          </a>
        <% end %>
      </dd>
      <!-- Display author_id end -->

      <dt>
        Photo
      </dt>
      <!-- Display photo_id start -->
      <dd>
        <% if @photo_comment.photo.present? %>
          <a href="/cocktail_photos/<%= @photo_comment.photo_id %>">
            <%= @photo_comment.photo.created_at %>
          </a>
        <% end %>
      </dd>
      <!-- Display photo_id end -->

      <dt>
        Body
      </dt>
      <!-- Display body start -->
      <dd>
        <%= @photo_comment.body %>
      </dd>
      <!-- Display body end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@photo_comment.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@photo_comment.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<!-- Show Page Customization end -->
