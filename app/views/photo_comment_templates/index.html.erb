<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All photo comments
    </h1>

    <a href="/photo_comments/new" class="btn btn-block btn-outline-secondary">
      Add a new photo comment
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "photo_comment_templates/photo_comments_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Author
        </th>

        <th>
          Photo
        </th>

        <th>
          Body
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @photo_comments.each do |photo_comment| %>
      <tr>
        <td>
          <%= photo_comment.id %>
        </td>

        <td>
          <% if photo_comment.author.present? %>
            <a href="/users/<%= photo_comment.author.id %>">
              <%= photo_comment.author.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <% if photo_comment.photo.present? %>
            <a href="/cocktail_photos/<%= photo_comment.photo.id %>">
              <%= photo_comment.photo.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <%= photo_comment.body %>
        </td>

        <td>
          <%= time_ago_in_words(photo_comment.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(photo_comment.updated_at) %> ago
        </td>

        <td>
          <a href="/photo_comments/<%= photo_comment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @photo_comments, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
